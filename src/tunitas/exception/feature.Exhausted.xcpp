#divert <fpp>
namespace tunitas::exception::feature {
  //
  // As stated.
  //
  // Semantic:
  //
  //   The sense of being "exhausted".
  //   An iterator is exhausted when iterator == end
  //
  // Specification:
  //
  //   The minimal sense of that.
  //
  // Design:
  //
  //   Descendants only.
  //   Descendants MUST fulfill the what() obligation
  //
  // Usage:
  //
  //   You need a tutorial on how to use inheritance?  O.Rly?
  //
  class Exhausted;
}
#endiv
#divert <hpp>
#import tunitas.exception.feature.Invariant
class tunitas::exception::feature::Exhausted : public virtual Invariant {
protected:
  virtual ~Exhausted() = default;
public:
  virtual auto what() const noexcept -> char const * = 0;
};
#endiv
