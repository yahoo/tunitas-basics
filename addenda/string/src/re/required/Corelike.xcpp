#divert <fpp>
#import std.size_t
namespace re::required {
  //
  // The simplest of operations.
  //
  template<typename UNIFIER> concept Corelike = requires(UNIFIER unifier) {
    typename UNIFIER::value_type;
    { unifier.data() } -> convertible_to<typename UNIFIER::value_type const *>;
    { unifier.size() } -> convertible_to<std::size_t>;
    typename UNIFIER::const_iterator;
    { unifier.begin() } -> convertible_to<typename UNIFIER::const_iterator>;
    { unifier.end() } -> convertible_to<typename UNIFIER::const_iterator>;
    // and many other needs, which are not yet declared here.
    //
  };
}
#endiv
