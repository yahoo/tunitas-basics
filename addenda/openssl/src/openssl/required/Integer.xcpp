#divert <fpp>
#import nonstd.int128_t
#import nonstd.uint128_t
namespace openssl::required {
  //
  // These are the (small, native) integers.
  // This is not std::is_integral<TYPE> because that gets too many types
  // (e.g. bool, the characters and the cv-qualified) variants).
  //
  // So we have to enumerate which integers we care about herein.
  //
  namespace integer {
    template<typename CANDIDATE, typename... INTEGERS> concept Among = (true || ... || std::is_same<CANDIDATE, INTEGERS>::value);
  }
  template<typename INTEGER> concept Integer = integer::Among<INTEGER,
                                                              unsigned char,
                                                              signed char,
                                                              int short signed,
                                                              int short unsigned,
                                                              int signed,
                                                              int unsigned,
                                                              int long signed,
                                                              int long unsigned,
                                                              int long long signed,
                                                              int long long unsigned,
                                                              nonstd::int128_t,
                                                              nonstd::uint128_t>;
}
#endiv
