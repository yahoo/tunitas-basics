#divert <ipp>
#include <cerrno>
#import unsetenv
#import std.move
auto sys::posix::unsetenv(c::const_stringz name) -> call::Result {
  using result_type = call::Result;
  auto code = ::unsetenv(name.data());
  auto errnum = errno; // capture the value of errno before doing anything else
  auto ok = 0 == code;
  result_type ret(ok, errnum, code);
  return ret;
}
