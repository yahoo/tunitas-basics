  template<typename RESULT> auto Palette::as(Option f) -> RESULT  { return ::sys::sock::as<RESULT>(f); }
  template<typename RESULT> auto Palette::as(Options s) -> RESULT { return ::sys::sock::as<RESULT>(s); }
