#!/bin/bash
source ${0%/*}/rigging.sh || exit 1
verbose_mode=${V:-0}
set -e
tmpfile=tmp/t99.chmod.$$
mkdir -p tmp
function remove_tmpfile() { rm -f $tmpfile; }
trap remove_tmpfile EXIT
touch $tmpfile
function run() {
    if ((verbose_mode)); then
        echo "run: $@"
    fi
    "$@";
    local e=$?;
    if ((verbose_mode)); then
        ls -ld $tmpfile
    fi
    return $e;
}

# argument ordering of the tester is inverted from that of /usr/bin/chmod

run ${exe?} ${tmpfile?} 0
run ${exe?} ${tmpfile?} 1
run ${exe?} ${tmpfile?} 2
run ${exe?} ${tmpfile?} 3
run ${exe?} ${tmpfile?} 4
run ${exe?} ${tmpfile?} 5
run ${exe?} ${tmpfile?} 6
run ${exe?} ${tmpfile?} 7

run ${exe?} ${tmpfile?} 10
run ${exe?} ${tmpfile?} 20
run ${exe?} ${tmpfile?} 30
run ${exe?} ${tmpfile?} 40
run ${exe?} ${tmpfile?} 50
run ${exe?} ${tmpfile?} 60
run ${exe?} ${tmpfile?} 70

run ${exe?} ${tmpfile?} 100
run ${exe?} ${tmpfile?} 200
run ${exe?} ${tmpfile?} 300
run ${exe?} ${tmpfile?} 400
run ${exe?} ${tmpfile?} 500
run ${exe?} ${tmpfile?} 600
run ${exe?} ${tmpfile?} 700

run ${exe?} ${tmpfile?} 444
